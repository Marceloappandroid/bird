<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Game</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        #game-container {
            width: 400px;
            height: 400px;
            background-color: #f0f0f0;
            position: relative;
        }

        #launcher {
            width: 50px;
            height: 50px;
            background-color: red;
            border-radius: 50%;
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
        }

        #target {
            width: 50px;
            height: 50px;
            background-color: green;
            border-radius: 50%;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
    </style>
</head>
<body>
    <div id="game-container">
        <div id="launcher"></div>
        <div id="target"></div>
    </div>

    <script>
        const launcher = document.getElementById('launcher');
        const target = document.getElementById('target');
        let isDragging = false;

        launcher.addEventListener('mousedown', () => {
            isDragging = true;
        });

        document.addEventListener('mousemove', (e) => {
            if (isDragging) {
                const posX = e.clientX - launcher.offsetWidth / 2;
                launcher.style.left = posX + 'px';
            }
        });

        document.addEventListener('mouseup', () => {
            isDragging = false;
            const launcherRect = launcher.getBoundingClientRect();
            const targetRect = target.getBoundingClientRect();

            if (
                launcherRect.left < targetRect.right &&
                launcherRect.right > targetRect.left &&
                launcherRect.top < targetRect.bottom &&
                launcherRect.bottom > targetRect.top
            ) {
                alert('VocÃª acertou o alvo!');
            }
        });
    </script>
</body>
</html>
